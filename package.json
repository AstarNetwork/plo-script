{
    "name": "plasm-scripts",
    "version": "1.0.0",
    "description": "A multi-purpose CLI tool to quickly interact with Plasm Network",
    "main": "src/index.ts",
    "scripts": {
        "start": "ts-node-dev -r dotenv/config src/index.ts",
        "build": "tsc",
        "test": "echo \"Error: no test specified\" && exit 1",
        "fetch:eth-test": "ts-node -r dotenv/config src/cli/cacheLockEvents.ts ropsten",
        "fetch:eth-main": "ts-node -r dotenv/config src/cli/cacheLockEvents.ts mainnet",
        "fetch:claims": "ts-node -r dotenv/config src/cli/cacheClaimEvents.ts",
        "fetch:all": "yarn run fetch:eth-test && yarn run fetch:eth-main && yarn run fetch:claims",
        "lint": "run-p -l -c --aggregate-output lint:*",
        "lint:eslint": "eslint src",
        "lint:prettier": "prettier --check src",
        "fix": "run-s fix:prettier fix:eslint",
        "fix:eslint": "npm run lint:eslint -- --fix src",
        "fix:prettier": "npm run lint:prettier -- --write src"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/cli-progress": "^3.8.0",
        "@types/lodash": "^4.14.164",
        "@types/node-fetch": "^2.5.7",
        "@types/yargs": "^16.0.1",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "dotenv": "^9.0.1",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.4.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "@plasm/types": "^1.5.3",
        "@polkadot/api": "^4.12.1",
        "@polkadot/types": "^4.12.1",
        "@polkadot/util": "^6.6.1",
        "@polkadot/util-crypto": "^6.6.1",
        "axios": "^0.21.1",
        "bignumber.js": "^9.0.1",
        "bn.js": "^5.1.3",
        "cli-progress": "^3.8.2",
        "csv-stringify": "^5.5.1",
        "eth-crypto": "^1.8.0",
        "lodash": "^4.17.20",
        "moment": "^2.29.1",
        "neat-csv": "^5.2.0",
        "node-fetch": "^2.6.1",
        "yargs": "^17.0.1"
    }
}
